

<div class="banner" style="background-image: linear-gradient(107deg, rgba(0,25,29,0.6) 0%, rgba(0,-344,27,0.3) 50%), url('http://www.quadrathell.cn.ua/_nw/18/94684225.jpg');">
  <div class="banner-content white">
    <h1 style="font-weight: lighter; font-size: 80px;">Vape Shows</h1>
    <p>Your one-stop to all the vape shows</p>

    <div class="search-wrapper-form">
      <form class="search-form-inline" role="form" action="events/search">
        <input type="text" class="form-control form-search" id='location' name="location" value="Los Angeles">
        <button type="submit" class="btn btn-default-search">Search</button>
      </form>
    </div>
  </div>
</div>



<div class="text-center bm50">
  <h2 class="tbm50">Latest Events</h2>

    <div class="container">
      <div class="row">
        <% @latest_events.each do |event| %>
            <div class="col-xs-6 col-sm-3 tbm15">

              <%= link_to event_path(event) do %>
                <div class="image-crop card" style="background-image: url('<%= image_url event.primary_image %>')">

                    <div class="logo-inside-card">
                      <%= cl_image_tag(event.logo) %>
                    </div>
                </div>
              <% end %>

            </div>
        <% end %>
      </div>
    </div>
  </div>


  <div class="banner" style="background-color: #3c465a; height: 85vh; ">
    <div class="banner-content white">
     <h1>DISCOVER</h1>
     <p>List and view all vape events around the world.</p>

     <img class="avatar-large" src="https://cdn0.iconfinder.com/data/icons/flaturici-set-5/512/binoculars-512.png" alt="">
                     <br><br><br><br>
     <div class="text-center">
      <a href=" events#index" class="btn btn-moses btn-lg" role="button">Discover Events</a>
     </div>
    </div>
  </div>






  <div class="text-center">
    <h2 class="tbm50">Latest Reviews</h2>

      <div class="container">
        <div class="row">
          <% @latest_reviews.each do |review| %>
              <div class="col-xs-4  tbm15">
                <h3 class="line-height"><%= review.headline %></h3>
                <div class="star-ratings-css">
                  <div class="star-ratings-css-top" style="width:<%= (review.rating * 21.5).to_i %>%"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>

                  <div class="star-ratings-css-bottom"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>


